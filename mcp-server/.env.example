# MCPサーバー設定
MCP_PORT=23100
# MCP_HOST=localhost  # 現在未使用（将来拡張用）
LOG_LEVEL=info

# 評価器設定
# モック評価器を使用する場合はtrue（デフォルトは本番のCodex評価器）
USE_MOCK_EVALUATOR=false

# 評価設定
MAX_ITERATIONS=5
TARGET_SCORE=8.0

# 評価モード設定
# flexible: Codexの自然な出力を受け入れる（推奨）
# strict: JSON形式を厳密に要求（旧互換）
EVALUATION_MODE=flexible

# プロンプト設定
# 柔軟な評価プロンプト（推奨）
EVALUATION_PROMPT_PATH=../prompts/evaluation-prompt-flexible.txt

# パフォーマンス設定（推奨値）
# タイムアウト: デフォルト5分（300000ms）、最大30分（1800000ms）
CODEX_TIMEOUT=300000  # 5分（推奨）
CODEX_MAX_BUFFER=20971520  # 20MB

# Codex CLI設定
# --format jsonオプションがサポートされていない場合はfalseに設定
CODEX_SUPPORTS_JSON_FORMAT=false

# 注意事項:
# - Codex CLIは独自の認証システムを使用します
# - 初回実行時に 'codex login' コマンドで認証してください
# - OPENAI_API_KEY環境変数は不要です