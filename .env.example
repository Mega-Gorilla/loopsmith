# LoopSmith 環境変数設定例

# 基本設定
USE_MOCK_EVALUATOR=false
TARGET_SCORE=8.0
LOG_LEVEL=info

# Codex設定
CODEX_TIMEOUT=300000  # 5分（最大30分まで設定可能）
CODEX_MAX_BUFFER=20971520  # 20MB
CODEX_SUPPORTS_JSON_FORMAT=false  # 互換性のためfalse推奨

# ダッシュボード設定
ENABLE_DASHBOARD=true
DASHBOARD_PORT=3000
AUTO_OPEN_BROWSER=true

# 評価プロンプト設定（オプション）
# EVALUATION_PROMPT_PATH=/path/to/custom/prompt.txt

# レガシーWebSocket設定（stdio版では不要）
# MCP_PORT=23100