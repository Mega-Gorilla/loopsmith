# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{ts,js,tsx,jsx}]
indent_size = 2
quote_type = single

[*.{json,yml,yaml}]
indent_size = 2

[*.{bat,cmd}]
end_of_line = crlf

[*.sh]
end_of_line = lf

[Makefile]
indent_style = tab